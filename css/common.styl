#clearfix
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

#semantic-list
  list-style: none
  margin: 0
  padding: 0

.columns
  @extends #clearfix

  &.two > .column
    width: 50%

    &:first-child
      padding 0 16px 0 0

    &:last-child
      padding 0 0 0 16px

  .column
    box-sizing border-box
    float left

    img
      max-width 100%

button
  cursor pointer
  
  &.large
    background #01a0e2
    border 1px solid rgba(#000, 0.8)
    border-radius 5px
    box-shadow: inset 0 1px 0 0 rgba(#fff, 0.3),
      0 1px 0 0 #007fe2
    color #fff
    font-size 17px
    font-weight 700
    margin 0 15px
    padding 15px 40px
    text-shadow 0 1px 3px rgba(#000, 0.35)

  &.small
    background #01a0e2
    border 1px solid rgba(#000, 0.8)
    border-radius 3px
    box-shadow: inset 0 1px 0 0 rgba(#fff, 0.3),
      0 1px 0 0 #007fe2
    color #fff
    font-size 14px
    font-weight 700
    margin 0 10px
    padding 7px 20px
    text-shadow 0 1px 3px rgba(#000, 0.35)


figure
  margin 0

h1
  color #FFF
  font-size 36px
  font-weight 200
  text-shadow 0px 1px 0px $textshadow
  border-bottom 1px solid $headingline
  padding-bottom 20px
  position relative

  &:before
    border-bottom 1px solid $headinglineshadow
    bottom -2px
    content ""
    height 0
    left 0
    position absolute
    width 100%

h2
  margin 1em 0 0.15em 0

h3
  font-size 12px
  font-weight 600
  text-shadow 0px 1px 0px rgba(255, 255, 255, .25)
  text-transform uppercase
  padding-bottom 30px
  border-bottom 1px solid $headingline
  box-shadow 0px 1px 0px $headinglineshadow

h4
  margin 1em 0 0.15em 0

p, li
  font-size 13px
  font-weight 500
  line-height 1.4em
  
p
  margin 0.2em 0 1em 0

a
  color #fff

.disable
  pointer-events: none
