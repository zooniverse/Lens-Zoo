.stats
  border-left 1px solid $boxline
  border-bottom 1px solid $boxline
  box-sizing border-box
  
  .stat
    display inline-block
    margin 0
    width 143px
    border-right 1px solid $boxline
    
    .number
      color #FFF
      font-size 24px
      font-weight 100
      text-shadow 0 1px 0 $textshadow
      padding-left 20px
      margin 0
      
    .description
      color #000d18
      font-size 9px
      padding-left 20px
      font-weight 600
      text-shadow 0px 1px 0px rgba(255, 255, 255, 0.25)
      text-transform uppercase
