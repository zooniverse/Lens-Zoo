
.controls
  width 100%
  height 60px
  background rgb(233, 233, 233)

  &.small
    height 30px

    a
      width 33.333%

  a
    box-sizing border-box
    width 20%
    height 100%
    float left
    color $black
    border-right 1px solid rgb(206, 206, 206)
    text-align center
    font-weight 700
    font-size 12px
    text-decoration none

    &.dashboard
      cursor: not-allowed

    &[data-preset]
      padding-top 22px

      &:last-child
        padding-top 22px

      &.selected
        color rgb(226, 84, 0)
        background rgb(217, 217, 217)

    &:last-child
      width 40%
      height 100%
      border none
      background none
      padding-top 22px

      &:hover
        color rgb(226, 84, 0)

    .icon
      width 30px
      height 30px
      margin 18% 0 0 34%
      background url('images/icon-sprite.png') no-repeat

      &[data-icon='heart']
        background-position 4px -32px
        &.active
          background-position 4px 4px
      &[data-icon='discuss']
        background-position -38px -32px
      &[data-icon='dashboard']
        background-position -78px -32px
    &:hover, &.hover
      background rgb(217, 217, 217)
      .icon
        &[data-icon='heart']
          background-position 4px 4px
        &[data-icon='discuss']
          background-position -38px 4px
        &[data-icon='dashboard']
          background-position -78px 4px
